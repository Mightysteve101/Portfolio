---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>


<!-- -------------------- -->
<style is:global>

    @import url('https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');
    
	:root {
		--primary: rgb(255,255,255); /* White */
		--secondary: #f2f2f2; /*Anti-white*/ 
		--accent: #F71735; /* Imperial Red*/
		--typography: rgb(29,29,31); /* Rich black */
		--option_1: #360A14; /* Black Bean */

	}

    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

	html, body {
		font-family: "Arimo", sans-serif;
		background-color: var(--primary);
		background-size: auto;
        color: var(--typography);
        line-height: 1.3505882353;
	}


	@media (max-width: 1231px){
		.about-header{
			font-size: 3rem;
		}
		.description > h2 {
			font-size: 1rem;
		}

    }
</style>