<style>
    nav{
        background-color: transparent;
        height: 1rem;
    }
    .topnav{
        padding: 1.5rem 6rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: rgba(245, 245, 247, 0.907);
    }

    .topnav-logo a{
        text-decoration: none;
        color: rgba(96, 96, 96, 0.907);
        border-radius: 10%;
        font-weight: 500;
        /*
        background: -webkit-linear-gradient(158deg, #7c7c7c, #444444);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        */
        font-size: 1rem;
    }

    .topnav-links a{
        text-decoration: none;
        color: rgba(96, 96, 96, 0.907);
        padding: .7rem;
        border-radius: 10%;
        font-weight: 500;
        /*
        background: -webkit-linear-gradient(158deg, #7c7c7c, #444444);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        */
        font-size: 1rem;
    }

    .toggle-btn{
        color: black;
        font-size: 1.5 rem;
        cursor: pointer;
        display: none;
    }

    .dropdown-menu{
        position: absolute;
        top: 60px;
        right: 2rem;
        width: 200px;
        height: 0px;
        background-color: rgba(245, 245, 247, 0.7);
        backdrop-filter: blur(15px);
        border-radius: 40px; 
        overflow: hidden;
        z-index: 15;
        display:none;
        transition: height .2s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .dropdown-menu.open{
        height: 240px;
    }

    .dropdown-menu a{
        text-decoration: none;
        color: rgba(96, 96, 96, 0.907);
        font-size: 1rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media (max-width: 1000px){
        .topnav > .toggle-btn{
            display: block;
        }

        .topnav-links a{
            display: none;
        }

        .dropdown-menu{
            display: block;
        }
    }

    @media (max-width: 1000px){
        .dropdown-menu{
            left: 2rem;
            width: unset;
        }
    }

    @media (max-width: 768px){
        .topnav{
            padding: 1.5rem 4rem;
        }
    }

    @media (max-width: 425px){
        .topnav{
            padding: 1.5rem 2rem;
        }
    }

</style>

